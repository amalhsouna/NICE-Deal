{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <div class="col-md-6">
     <h3>Listes des utilisateurs</h3>
    <table class="table table-bordered">
            <thead>
            <tr>
              <th>Login</th>
              <th>Email</th>
              <th>Rôle</th>
              <th>Dernière connexion</th>
            </tr>
            </thead>
             <tbody>
                    {% for user in users %}
                            <tr class="active">
                                <td>{{user.username}}</td>
                                 <td> {{user.email}}</td>
                                 <td> {{user.roles[0]}}</td>
                                 <td>Le {{user.lastLogin|date('d/m/Y')}}</td>
                            </tr>
                    {% endfor %}  
             </tbody>
    </table>
     <div class="navigation">
       {{ knp_pagination_render(users) }}
     </div>

    </div><!-- /.box-body -->
                   
    
{% include '::includes/footer.html.twig' %}
{% endblock %}












