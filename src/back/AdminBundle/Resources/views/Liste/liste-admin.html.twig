{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <div class="col-md-6">
     <h3>Listes des utilisateurs</h3>
    <div class="input-group"> <span class="input-group-addon">Filter</span>
        <input id="filter" type="text" class="form-control" placeholder="Recherche ici...">
    </div>
    <table class="table table-bordered">
            <thead>
            <tr>
              <th>Login</th>
              <th>Email</th>
              <th>Rôle</th>
              <th>Dernière connexion</th>
            </tr>
            </thead>
             <tbody class="searchable">
                    {% for user in users %}
                        <tr class="active">
                            <td>{{user.username}}</td>
                            <td> {{user.email}}</td>
                            <td> {{user.roles[0]}}</td>
                            <td>Le {{user.lastLogin|date('d/m/Y')}}</td>
                        </tr>
                    {% endfor %}  
             </tbody>
    </table>
             
       {{ knp_pagination_render(users) }}

    </div><!-- /.box-body -->
                   
    
{% include '::includes/footer.html.twig' %}
{% endblock %}












