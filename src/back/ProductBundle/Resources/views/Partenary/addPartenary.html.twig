{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <h1>Produits<small>Shop</small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
        <li class="active">Partenaire</li>
    </ol>
    </section>
    <section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                  <h3 class="box-title">Création du Partenaire</h3>
                  <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
   <div class="box-body">
   <div class="row">
   <div class="col-md-12">
    <div class="box box-danger">
    <div class="box-body">
        <div class="box-body">
        {% if message %}
            <div class="alert alert-success">
                <strong>Success ! </strong> {{ message }}
            </div>
        {% endif %}

      <form method="post" enctype="multipart/form-data">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.name,"Nom") }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.adresse,"Adresse") }}
                    {{ form_errors(form.adresse) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.telephone,"Téléphone") }}
                    {{ form_errors(form.telephone) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mapV1,"MapV1") }}
                    {{ form_errors(form.mapV1) }}
                    {{ form_widget(form.mapV1, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mapV2,"MapV2") }}
                    {{ form_errors(form.mapV2) }}
                    {{ form_widget(form.mapV2, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.additionalInformation,"Information supplémentaire") }}
                    {{ form_errors(form.additionalInformation) }}
                    {{ form_widget(form.additionalInformation, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group image">
                    {{ form_errors(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'file-loading'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.rc,"RC ") }}
                    {{ form_errors(form.rc) }}
                    {{ form_widget(form.rc, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.matricule,"Matricule") }}
                    {{ form_errors(form.matricule) }}
                    {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mail,"Mail") }}
                    {{ form_errors(form.mail) }}
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Ajouter</button>
              </div>
                {{ form_end(form) }}
            </div>
              
       </form>
    </div>
    </div>
  {% include '::includes/footer.html.twig' %}
{% endblock %}