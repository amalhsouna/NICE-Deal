{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <div class="col-md-6">
        <h3>Liste des produits</h3>

        <table class="table table-bordered">
        <thead>
            <tr>
              <th>Nom de produit</th>
              <th>Prix</th>
              <th>Description</th>
              <th>Modifier</th>
            </tr>
        </thead>
         <tbody>
            {% for product in products %}
            <tr>
                <td>{{product.name}}</td>
                <td>{{product.price}}</td>
                <td>{{product.description}}</td>
                <td><a href="{{path('back_product_admin_put_products',{'id': product.id})}}" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
            </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(paging) }}
        </div>
    </div>
  {% include '::includes/footer.html.twig' %}
{% endblock %}