{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <div class="col-md-6">
        <h3>Liste des catégories</h3>

        <table class="table table-bordered">
        <thead>
            <tr>
              <th>Nom de catégorie</th>
              <th>Modifier</th>
              <th>Supprimer</th>
            </tr>
        </thead>
         <tbody>
            {% for categories in category %}
            <tr>
               <td>{{categories.name}}</td>
               <td>
                   <a href="{{path('back_category_admin_update_category',{'id': categories.id})}}" class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </td>
                <td>
                    <a href="#" data-href="{{path('back_category_admin_delete_category',{'id': categories.id})}}" data-toggle="modal" data-target="#confirm-delete"></a><br>
                    <button class="glyphicon glyphicon-remove" data-href="{{path('back_category_admin_delete_category',{'id': categories.id})}}" data-toggle="modal" data-target="#confirm-delete"></button>
                </td>  
            </tr>
            {% endfor %}
        </table>
    </div>
  {% include '::includes/footer.html.twig' %}
{% endblock %}
