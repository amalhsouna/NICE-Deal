{# src/back/ProductBundle/Resources/views/Advert/form.html.twig #}
{% extends "::baseAdmin.html.twig" %}
{% block body %}
    {% include '::includes/topColumn.html.twig' %}
    {% include '::includes/leftColumn.html.twig' %}
    <div class="col-md-6">
    <h3>Formulaire d'ajout sous catégorie <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></h3>
    <div class="box"  style="padding: 10px">
       {% if message %}
            <div class="alert alert-success">
                <strong>Success!</strong> {{ message }}
            </div>
        {% endif %}
      <form method="post" enctype="multipart/form-data">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.subName,"Nom") }}
                    {{ form_errors(form.subName) }}
                    {{ form_widget(form.subName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group category">
                    {{ form_label(form.category,"Catégorie") }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Ajouter</button>
              </div>
                {{ form_end(form) }}
            </div>
              
       </form>
    </div>
    </div>
  {% include '::includes/footer.html.twig' %}
{% endblock %}